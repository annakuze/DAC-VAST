<h1>キャンペーン一覧</h1>
<%= link_to '登録', new_campaign_path, class: 'btn btn-primary' %> 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>名前</th>
        <th>開始日時</th>
        <th>終了日時</th>
        <th>ゴール</th>
        <th>作成日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      
<% @campaigns.each do |campaign| %>

        <tr>
          <td><%= link_to campaign.id, edit_campaign_path(campaign) %></td>
          <td><%= campaign.name %></td>
          <td><%= campaign.start_at %></td>
          <td><%= campaign.end_at %></td>
          <td><%= campaign.limit_start %></td>
          <td><%= campaign.created_at %></td>
          <td><%= campaign.updated_at %></td>
        </tr>
      
<% end %>

   </tbody>
  </table>